<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scott2d5_MVVMContactList.Views.AddContactPage"
             xmlns:viewmodels="clr-namespace:scott2d5_MVVMContactList.ViewModels"
             Title="Add Contact">

   <StackLayout Padding="20">
      <Entry Placeholder="Name" Text="{Binding Name}" />
      <Entry Placeholder="Email" Text="{Binding Email}" />
      <Entry Placeholder="Phone Number" Text="{Binding PhoneNumber}" />
      <Editor Placeholder="Description" Text="{Binding Description}" />
      <Button Text="Save" Command="{Binding SaveContactCommand}" />
   </StackLayout>
</ContentPage>