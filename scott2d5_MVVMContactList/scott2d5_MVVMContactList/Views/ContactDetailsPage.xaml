<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scott2d5_MVVMContactList.Views.ContactDetailsPage"
             Title="Contact Details">

   <StackLayout Padding="20">
      <Label Text="{Binding Contact.Name}" FontSize="24" FontAttributes="Bold" />
      <Label Text="{Binding Contact.Email}" />
      <Label Text="{Binding Contact.PhoneNumber}" />
      <Label Text="{Binding Contact.Description}" />
      <Button Text="Back" Command="{Binding GoBackCommand}" />
   </StackLayout>
</ContentPage>